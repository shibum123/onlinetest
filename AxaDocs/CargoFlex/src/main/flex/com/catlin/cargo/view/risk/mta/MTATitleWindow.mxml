<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml"
				width="650"
				layout="vertical"
				title="{resourceManager.getString(RB_ui.RB_NAME, RB_ui.MTA_REQUEST_VIEW_TITLE)}"
				verticalScrollPolicy="off"
				xmlns:commonComponents="com.catlin.cargo.view.commonComponents.*">

	<mx:Script>
		<![CDATA[
			import com.catlin.cargo.bundles.RB_ui;
			
		]]>
	</mx:Script>
	
	<mx:VBox width="100%"
			 verticalGap="0">
		<mx:Text text="{resourceManager.getString(RB_ui.RB_NAME, RB_ui.MTA_REQUEST_VIEW_INTRO)}"/>
		<mx:Form width="100%">
			<mx:FormItem label="{resourceManager.getString(RB_ui.RB_NAME, RB_ui.MTA_REQUEST_VIEW_ENDORSEMENT_DATE)}"
						 required="true">
				<mx:DateField id="dtfEndorsementDate"
							  width="100"
							  editable="true"/>
			</mx:FormItem>
			<mx:FormItem label="{resourceManager.getString(RB_ui.RB_NAME, RB_ui.MTA_REQUEST_VIEW_REASON)}"
						 required="true">
				<mx:ComboBox id="cboMtaReasons"
							 prompt="Select"
							 labelField="description"/>
			</mx:FormItem>
			<mx:FormItem width="100%"
						 label="{resourceManager.getString(RB_ui.RB_NAME, RB_ui.MTA_REQUEST_VIEW_DESCRIPTION)}"
						 required="{cboMtaReasons.selectedItem.description == 'Other'}">
				<mx:TextArea id="txaRequest"
							 width="100%"
							 height="300"
							 paddingLeft="10"/>
			</mx:FormItem>
		</mx:Form>
	</mx:VBox>

	<commonComponents:ConfirmationButtonBar id="buttonBar"
											width="100%"/>

</mx:TitleWindow>
