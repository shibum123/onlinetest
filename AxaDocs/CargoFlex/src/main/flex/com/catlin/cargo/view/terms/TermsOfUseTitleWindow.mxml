<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml"
				layout="vertical"
				width="600"
				height="500"
				title="{resourceManager.getString(RB_ui.RB_NAME,RB_ui.TERMS_OF_USE)}"
				xmlns:flexiframe="http://code.google.com/p/flex-iframe/"
				>

	<mx:Script>
		<![CDATA[
			import com.catlin.cargo.bundles.RB_ui;
		]]>
	</mx:Script>

	<flexiframe:IFrame id="ifrTerms"
					   height="100%"
					   width="100%"
					   overlayDetection="true"/>
	
	<mx:HBox horizontalAlign="center"
			 width="100%">
		<mx:Button id="btnOk"
				   label="{resourceManager.getString(RB_ui.RB_NAME,RB_ui.OK)}"/>
		<mx:Button id="btnAccept"
				   label="{resourceManager.getString(RB_ui.RB_NAME,RB_ui.ACCEPT)}"
				   visible="false"
				   includeInLayout="false"/>
		<mx:Button id="btnDecline"
				   label="{resourceManager.getString(RB_ui.RB_NAME,RB_ui.DECLINE)}"
				   visible="false"
				   includeInLayout="false"/>
	</mx:HBox>
</mx:TitleWindow>
