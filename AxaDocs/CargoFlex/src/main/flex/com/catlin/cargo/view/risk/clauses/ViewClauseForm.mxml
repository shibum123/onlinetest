<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml"
				xmlns:flexiframe="http://code.google.com/p/flex-iframe/"
				width="500"
				height="400"
				title="{resourceManager.getString(RB_ui.RB_NAME, RB_ui.VIEW_CLAUSES_FORM_TITLE)}"
				styleName="Application">
	<mx:Script>
		<![CDATA[
			import com.catlin.cargo.bundles.RB_ui;
		]]>
	</mx:Script>
	<mx:VBox width="100%"
			 height="100%"
			 horizontalAlign="center">
		<flexiframe:IFrame id="ifrDescription"
						   label="{resourceManager.getString(RB_ui.RB_NAME, RB_ui.VIEW_CLAUSES_FORM_CLAUSE)}"
						   width="100%"
						   height="100%"
						   overlayDetection="true"/>
		<mx:Button id="btnOK"
				   label="{resourceManager.getString(RB_ui.RB_NAME, RB_ui.OK)}"/>
	</mx:VBox>
</mx:TitleWindow>
