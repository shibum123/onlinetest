<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml"
		 width="100%"
		 height="100%"
		 horizontalScrollPolicy="off"
		 verticalScrollPolicy="off"
		 styleName="SubContentArea"
		 xmlns:commonComponents="com.catlin.cargo.view.commonComponents.*"
		 creationComplete="vbox1_creationCompleteHandler(event)" >

	<mx:Script>
		<![CDATA[
			import com.catlin.cargo.bundles.RB_ui;
			
			import mx.events.FlexEvent;
			
			[Bindable]
			public var displayTitle:Boolean = true;

			[Bindable]
			public var displayIntro:Boolean = true;
	
			[Bindable]
			public var titleText:String = "";
			
			[Bindable]
			public var introText:String = "";
			
			protected function vbox1_creationCompleteHandler(event:FlexEvent):void
			{
				titleText = resourceManager.getString(RB_ui.RB_NAME, RB_ui.CHANGE_PASSWORD_TITLE);
				introText = resourceManager.getString(RB_ui.RB_NAME, RB_ui.CHANGE_PASSWORD_INTRO);
			}
			
		]]>
	</mx:Script>
	
	<mx:Label text="{titleText}"
			  styleName="heading2"
			  id="title"
			  includeInLayout="{displayTitle}"
			  visible="{displayTitle}" />
	<mx:Spacer height="5"
			   includeInLayout="{displayTitle}"
			   visible="{displayTitle}" />
	<mx:Label text="{introText}"
			  styleName="heading3"
			  id="intro"
			  includeInLayout="{displayIntro}"
			  visible="{displayIntro}" />
	<mx:Spacer height="5"
			   includeInLayout="{displayIntro}"
			   visible="{displayIntro}" />		

	<mx:Form height="100%">
		<mx:FormItem label="{resourceManager.getString(RB_ui.RB_NAME,RB_ui.CHANGE_PASSWORD_OLD_PASSWORD)}"
					 required="true">
			<mx:TextInput id="txiOldPassword"
						  displayAsPassword="true"/>
		</mx:FormItem>
		<mx:FormItem label="{resourceManager.getString(RB_ui.RB_NAME,RB_ui.CHANGE_PASSWORD_NEW_PASSWORD)}"
					 required="true">
			<mx:TextInput id="txiNewPassword"
						  displayAsPassword="true"/>
		</mx:FormItem>
		<mx:FormItem label="{resourceManager.getString(RB_ui.RB_NAME,RB_ui.CHANGE_PASSWORD_NEW_PASSWORD_CONFIRMATION)}"
					 required="true">
			<mx:TextInput id="txiReenterPassword"
						  displayAsPassword="true"/>
		</mx:FormItem>

		<mx:Spacer height="5"/>

		<commonComponents:ConfirmationButtonBar width="100%"
												horizontalAlign="left"
												id="confirmationButtonbar"/>

	</mx:Form>
	<mx:ControlBar width="100%"
				   height="40"
				   verticalGap="0"
				   paddingTop="0">
		<mx:HBox styleName="footerTips">
			<mx:Text text="*"
					 color="#CC0033"
					 fontSize="16"
					 fontWeight="bold"/>
			<mx:Text text="{resourceManager.getString(RB_ui.RB_NAME,RB_ui.MANDATORY_FIELDS)}"/>
		</mx:HBox>
	</mx:ControlBar>

</mx:VBox>
